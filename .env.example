# Supabase Configuration
SUPABASE_URL="https://your-project-ref.supabase.co"
SUPABASE_ANON_KEY="your-anon-public-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-secret-key"

# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres.your-project-ref:[YOUR_DB_PASSWORD]@aws-0-ap-south-1.pooler.supabase.com:6543/postgres"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here-make-it-long-and-random"

# Email Configuration (Gmail)
# IMPORTANT: Replace with your actual Gmail credentials
# 1. Enable 2-factor authentication on your Gmail account
# 2. Generate an app password from Gmail settings
# 3. Use your Gmail address and the generated app password below
GMAIL_EMAIL="your-gmail-address@gmail.com"
GMAIL_USER="your-gmail-address@gmail.com"
GMAIL_APP_PASSWORD="your-16-character-app-password"

# SendGrid Configuration (Alternative to Gmail)
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="your-verified-sender@yourdomain.com"

# Gemini AI Configuration
GEMINI_API_KEY="your-gemini-api-key-here"

# AWS S3 Configuration
S3_BUCKET_NAME="your-s3-bucket-name"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"

# Cashfree Configuration (Optional)
CASHFREE_CLIENT_ID="your-cashfree-client-id"
CASHFREE_CLIENT_SECRET="your-cashfree-client-secret"
CASHFREE_ENVIRONMENT="sandbox" # or "production"

# WhatsApp API Configuration (Optional)
WHATSAPP_TOKEN="your-whatsapp-token"
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"
WHATSAPP_VERIFY_TOKEN="your-webhook-verify-token"

# Application Configuration
NODE_ENV="development"
PORT=5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
